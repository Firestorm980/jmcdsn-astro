---
interface Props {
  url: string;
  title: string;
  height?: number;
  defaultTab?: string;
}

const { url, title, height = 300, defaultTab = 'html,result' } = Astro.props;
const slug = url.split('/').filter((item) => item).at(-1);
---
<p class="codepen" data-height={height} data-default-tab={defaultTab} data-slug-hash={slug} style={`height: ${height}px; box-sizing: border-box; display: flex; align-items: center; justify-content: center; border: 2px solid; margin: 1em 0; padding: 1em;`}>
    <span>See the Pen <a href={url}>{title}</a> on <a href="https://codepen.io">CodePen</a>.</span>
</p>
<script async src="https://cpwebassets.codepen.io/assets/embed/ei.js"></script>
<style>
	.codepen {
		margin-inline: auto;
	}
</style>
