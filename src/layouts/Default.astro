---
import BaseHead from '../components/BaseHead.astro';
import BaseHeader from '../components/BaseHeader.astro';
import BaseFooter from '../components/BaseFooter.astro';
import SiteSVG from '../components/SiteSVG.astro';

const { content } = Astro.props;
const { title, description, permalink, bodyClass } = content;
---
<html lang="en">
  <head>
    <BaseHead content={{title, description, permalink}} />
  </head>
  <body class={(bodyClass) ? bodyClass : 'page'}>
		<SiteSVG />
    <BaseHeader client:load />
    <main id="main" class="site-main">
			<div id="swup" class="site-main__content transition transition--page">
        <slot />
			</div>
    </main>
    <BaseFooter />
  </body>
</html>
