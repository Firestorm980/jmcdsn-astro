---
import BaseLayout from '../layouts/Base.astro';

interface Props {
    title: string;
    description: string;
    kind: string;
}

const {
    title,
    description,
    kind
} = Astro.props;

const layoutProps = {
    title,
    description,
    permalink: '',
    image: '',
    bodyClass: `archive archive--${kind}`,
}
---
<BaseLayout {...layoutProps}>
    <slot />
</BaseLayout>